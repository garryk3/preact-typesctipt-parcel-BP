{
  "name": "ivsp",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.tsx",
  "author": "ligastavok",
  "license": "ISC",
  "scripts": {
    "eslint": "eslint . --max-warnings 0 --cache",
    "eslint:check": "eslint --ext .ts,.tsx --max-warnings 0 src/",
    "eslint:autofix": "eslint --fix --ext .ts,.tsx src/",
    "stylelint:check": "stylelint \"src/**/*.pcss\"",
    "start": "rm -rf build/* && parcel -p 4000 public/index.html --out-dir build",
    "build": "rm -rf build/* && parcel build public/index.html --out-dir build",
    "deploy": "docker-compose down && docker-compose up -d --build",
    "report:bundle-size": "yarn build && static-server -i build/report.html -o"
  },
  "alias": {
    "react": "preact/compat",
    "react-dom": "preact/compat",
    "routes": "./src/routes",
    "components": "./src/components",
    "utils": "./src/utils",
    "configs": "./src/configs"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn eslint:check"
    }
  },
  "browserslist": [
    "last 2 Chrome versions"
  ],
  "dependencies": {
    "@material-ui/core": "^4.11.0",
    "@rematch/core": "^1.4.0",
    "@rematch/immer": "^1.2.0",
    "@rematch/loading": "^1.2.1",
    "@rematch/select": "^2.0.5",
    "axios": "^0.21.1",
    "clsx": "^1.1.0",
    "preact": "^10.3.4",
    "preact-router": "^3.2.1",
    "react-redux": "^7.2.0"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/node": "^13.13.4",
    "@types/parcel-env": "^0.0.0",
    "@types/react": "^16.8.6",
    "@types/react-redux": "^7.1.7",
    "@types/redux-logger": "^3.0.7",
    "@typescript-eslint/eslint-plugin": "^2.23.0",
    "@typescript-eslint/parser": "^2.23.0",
    "autoprefixer": "^9.8.4",
    "eslint": "^5.3.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^2.5.0",
    "husky": "^4.2.3",
    "parcel": "^1.12.4",
    "parcel-bundler": "^1.12.4",
    "parcel-plugin-bundle-visualiser": "^1.2.0",
    "parcel-plugin-clean-dist": "^0.0.6",
    "parcel-plugin-compress": "^2.0.2",
    "postcss-modules": "^3.2.0",
    "postcss-nested": "^4.2.2",
    "redux-logger": "^3.0.6",
    "static-server": "^2.2.1",
    "typescript": "^3.8.3"
  }
}
