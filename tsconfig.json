{
    "compilerOptions": {
      "esModuleInterop": true,
      "target": "ES6",
      "module": "esnext",
      "moduleResolution": "node",
      "strict": true,
      "jsx": "react",
      "jsxFactory": "h",
      "incremental": true,
      "experimentalDecorators": true,
      "lib": ["dom", "es2015"],
      "baseUrl": ".",
      "paths": {
        "routes/*": ["src/routes/*"],
        "components/*": ["src/components/*"],
        "utils/*": ["src/utils/*"],
        "react": ["node_modules/preact/compat"],
        "react-dom": ["node_modules/preact/compat"]
      },
      "sourceMap": true,
      "allowSyntheticDefaultImports": true,
      "outDir": "./build",
      "skipLibCheck": true
    },
    "include": ["./src/**/*"]
  }